{
  "manifest_version": 3,
  "name": "Focus Mode & Task Tracker",
  "version": "1.4",
  "description": "Blocks sites, hides YouTube feed, and tracks task/break time.",
  "permissions": [
    "tabs",
    "webNavigation",
    "storage",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_blocked_sites",
        "enabled": false,
        "path": "rules.json"
      }
    ]
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}